<style>
    :root {
        --open-sidebar-width: 0px;
    }

    .sidebar-visible {
        --open-sidebar-width: var(--sidebar-width);
    }

    #header-logo-container {
        text-align: center;
        position: fixed;
        z-index: 102;
        top: 0;
        left: calc(113px + var(--open-sidebar-width));
        width: calc(100% - var(--open-sidebar-width) - 113px - 65px);
        height: var(--menu-bar-height);
        transition: all 0.3s;
        pointer-events: none;
    }

    #header-logo {
        position: absolute;
        left: -35px;
        top: 2px;
    }

    #header-logo-title-placeholder {
        font-weight: 200;
        font-size: 2.4rem;
        line-height: var(--menu-bar-height);
        position: relative;
        color: rgba(0, 0, 0, 0);
    }

    @media screen and (max-width: 900px) {
        .sidebar-visible #header-logo {
            display: none;
        }
    }

    @media screen and (max-width: 600px) {
        .sidebar-hidden #header-logo {
            display: none;
        }
    }
</style>